{
  "compilerOptions": {
    "allowJs": false,
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES2017",
    "outDir": "dist",
    "strict": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["./**/*", "types.d.ts"],
  "exclude": ["node_modules", "dist"]
}
